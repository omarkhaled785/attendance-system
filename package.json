{
  "name": "attendance-system",
  "version": "1.0.0",
  "description": "نظام حضور وانصراف للعمال - كامل ومتكامل",
  "author": "Your Company Name",
  "main": "electron/main.js",
  "homepage": ".",

  "scripts": {
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:backend": "node backend/server.js",
    "dev:frontend": "vite",

    "build:frontend": "vite build",

    "build": "npm run build:frontend && electron-builder",

    "dist": "npm run build:frontend && electron-builder",

    "electron": "electron .",
    "electron:dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\" \"wait-on http://localhost:5173 && electron .\""
  },

  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.20.0",

    "express": "^4.18.2",
    "cors": "^2.8.5",

    "better-sqlite3": "^9.2.2",

    "jspdf": "^2.5.1",
    "jspdf-autotable": "^3.8.2"
  },

  "devDependencies": {
    "@vitejs/plugin-react": "^4.2.0",
    "vite": "^5.0.0",

    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",

    "concurrently": "^8.2.2",
    "wait-on": "^7.2.0"
  },

  "build": {
    "appId": "com.attendance.system",
    "productName": "نظام الحضور والانصراف",

    "directories": {
    "output": "dist",
          "buildResources": "build"
    },

    "asar": true,
    "asarUnpack": [
      "backend/**",
      "node_modules/better-sqlite3/**"
    ],

    "files": [
      "electron/**/*",
      "backend/**/*",
      "frontend/dist/**/*",
      "package.json",
      "icon.png",
      "icon.ico",
          "!backend/node_modules/**/*"
    ],

    "extraResources": [
      {
        "from": "backend",
        "to": "backend",
      "filter": ["**/*", "!node_modules"]      }
    ],

    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64"]
        }
      ],
      "icon": "icon.ico"
    },

    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "allowElevation": true,

      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "نظام الحضور والانصراف",

      "installerIcon": "icon.ico",
      "uninstallerIcon": "icon.ico",

      "language": "1025",
      "displayLanguageSelector": false
    },

    "linux": {
      "target": ["AppImage", "deb"],
      "icon": "icon.png",
      "category": "Office"
    },

    "mac": {
      "target": ["dmg"],
      "icon": "icon.icns",
      "category": "public.app-category.business"
    }
  }
}
